                @Html.DropDownListFor(model => model.listFee.Id, ViewBag.Fee as SelectList,"--Select --", new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.listFee.Id)

            </div>
        </div>
      
     
        <div class="form-group">
            @Html.Label("Class", new { @class = "control-label col-md-2"  })
            
