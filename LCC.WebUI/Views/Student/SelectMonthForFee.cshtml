                @Html.ValidationMessageFor(model => model.classe.ClassId)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Student Category", new { @class = "control-label  col-md-2" })
            <div class=" col-md-10">
                @Html.DropDownListFor(model => model.studentCategory.Id, ViewBag.StudentCategory as SelectList, "--Select --", new { @class = "form-control" })
