@model LCC.Domain.Entities.PaymentConfirmation

@{
    ViewBag.Title = "PaymentConfirmation";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>PaymentConfirmation</h2>

<hr />
<div class="col-lg-12 col-md-12">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["UnsuccessMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["UnsuccessMessage"]</div>
    }
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    


        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PrintOutDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
                <input type="submit" value="Next"  class="btn btn-success"  />
            </div>
        </div>
    </div>
}
