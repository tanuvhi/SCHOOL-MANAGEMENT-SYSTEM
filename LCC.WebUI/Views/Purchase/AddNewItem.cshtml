@model  LCC.Domain.Entities.ItemList

@{
    ViewBag.Title = "AddNewItem";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>AddNewItem</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
        <div class="col-lg-12 col-md-12">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["UnsuccessMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["UnsuccessMessage"]</div>
        }
    </div>
    
    <div class="form-horizontal">
        <h4>ItemList</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

                </div>
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuantityTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.QuantityTypeId, ViewBag.ItemLists as SelectList, "----", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuantityTypeId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
